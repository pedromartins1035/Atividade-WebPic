@model List<WebPicKnockout.Models.Pessoa>
@section scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.mask/1.14.16/jquery.mask.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script src="~/Scripts/knockout-3.5.0.js"></script>
    <script src="~/Scripts/PessoaKnockout.js"></script>
    <script>
        $(document).ready(function () {
            // Adicionando a máscara para o campo de CPF
            $('#cpf').mask('000.000.000-00', { reverse: true });
        });
    </script>

}

<h2>Lista de Pessoas</h2>

<form action="/Pessoa/Create">
    <button class="btn btn-primary">Adicionar Pessoa</button>
</form>
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>Codigo</th>
                <th>Nome</th>
                <th>Sobrenome</th>
                <th>Data de Nascimento</th>
                <th>Estado Civil</th>
                <th>CPF</th>
                <th>RG</th>
            </tr>
        </thead>
        <tbody data-bind="foreach: pessoas">
            <tr>
                <td data-bind="text: Codigo"></td>
                <td data-bind="text: Nome"></td>
                <td data-bind="text: Sobrenome"></td>
                <td data-bind="text: DataNasc"></td>
                <td data-bind="text: EstadoCivil"></td>
                <td data-bind="text: CPF"></td>
                <td data-bind="text: RG"></td>
                <td>
                    <button class="btn btn-primary" data-bind="click: $root.editar.bind($data, Codigo)">Editar</button>
                    <button class="btn btn-danger" data-bind="click: $root.remover.bind($data, Codigo)">Excluir</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>
